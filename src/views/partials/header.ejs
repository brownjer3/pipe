<!-- Header Navigation -->
<header class="fixed top-0 w-full bg-pipe-navy/90 backdrop-blur-md z-50 border-b border-gray-800">
    <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-pipe-green rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-pipe-navy" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2L2 7v10c0 5.55 3.84 10 10 10s10-4.45 10-10V7l-10-5z"/>
                    </svg>
                </div>
                <span class="text-xl font-bold text-white">Pipe</span>
            </div>
            
            <!-- Navigation -->
            <nav class="hidden md:flex items-center space-x-8">
                <a href="#demo" class="text-gray-300 hover:text-pipe-green transition-colors">Demo</a>
                <a href="#features" class="text-gray-300 hover:text-pipe-green transition-colors">Features</a>
                <a href="#pricing" class="text-gray-300 hover:text-pipe-green transition-colors">Pricing</a>
                <a href="https://github.com/brownjer3/pipe" class="text-gray-300 hover:text-pipe-green transition-colors">GitHub</a>
            </nav>
            
            <!-- CTA Button -->
            <div class="flex items-center space-x-4">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="bg-pipe-green text-pipe-navy px-4 py-2 rounded-lg font-medium hover:bg-pipe-green/90 transition-colors">
                        Dashboard
                    </a>
                <% } else { %>
                    <a href="/auth/github" class="bg-pipe-green text-pipe-navy px-4 py-2 rounded-lg font-medium hover:bg-pipe-green/90 transition-colors">
                        Start Free
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</header>